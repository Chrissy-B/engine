                    <param id="0" name="Instance variable">closed</param>
                    <param id="1" name="Value">1</param>
                </action>
            </actions>
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-11" name="For Each" type="System">
                            <param id="0" name="Object">seil</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="1" name="Is overlapping another object" type="schere">
                                    <param id="0" name="Object">seil</param>
                                </condition>
                                <condition id="-8" name="Is boolean instance variable set" type="schere">
                                    <param id="0" name="Instance variable">closed</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">tempID</param>
                                    <param id="1" name="Value">seil.UID</param>
                                </action>
                                <action id="-9" name="Destroy" type="seil" />
                            </actions>
                            <sub-events>
                                <event-block>
                                    <conditions>
                                        <condition id="-14" name="Compare variable" type="System">
                                            <param id="0" name="Variable">tempID</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">5</param>
                                        </condition>
                                    </conditions>
                                    <actions />
                                    <sub-events>
                                        <event-block>
                                            <conditions>
                                                <condition id="-13" name="Pick nth instance" type="System">
                                                    <param id="0" name="Object">ballon</param>
                                                    <param id="1" name="Instance">1</param>
                                                </condition>
                                            </conditions>
                                            <actions>
                                                <action behavior="Physics" id="21" name="Set immovable" type="ballon">
                                                    <param id="0" name="Setting">0</param>
                                                </action>
                                                <action behavior="Bullet" id="2" name="Set gravity" type="ballon">
                                                    <param id="0" name="Gravity">-10</param>
                                                </action>
                                            </actions>
                                        </event-block>
                                    </sub-events>
                                </event-block>
                                <event-block>
                                    <conditions>
                                        <condition id="-14" name="Compare variable" type="System">
                                            <param id="0" name="Variable">tempID</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">6</param>
                                        </condition>
                                    </conditions>
                                    <actions />
                                    <sub-events>
                                        <event-block>
                                            <conditions>
                                                <condition id="-13" name="Pick nth instance" type="System">
                                                    <param id="0" name="Object">ballon</param>
                                                    <param id="1" name="Instance">3</param>
                                                </condition>
                                            </conditions>
                                            <actions>
                                                <action behavior="Physics" id="21" name="Set immovable" type="ballon">
                                                    <param id="0" name="Setting">0</param>
                                                </action>
                                                <action behavior="Bullet" id="2" name="Set gravity" type="ballon">
                                                    <param id="0" name="Gravity">-10</param>
                                                </action>
                                            </actions>
                                        </event-block>
                                    </sub-events>
                                </event-block>
                                <event-block>
                                    <conditions>
                                        <condition id="-14" name="Compare variable" type="System">
                                            <param id="0" name="Variable">tempID</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">3</param>
                                        </condition>
                                    </conditions>
                                    <actions />
                                    <sub-events>
                                        <event-block>
                                            <conditions>
                                                <condition id="-13" name="Pick nth instance" type="System">
                                                    <param id="0" name="Object">ballon</param>
                                                    <param id="1" name="Instance">0</param>
                                                </condition>
                                            </conditions>
                                            <actions>
                                                <action behavior="Physics" id="21" name="Set immovable" type="ballon">
                                                    <param id="0" name="Setting">0</param>
                                                </action>
                                                <action behavior="Bullet" id="2" name="Set gravity" type="ballon">
                                                    <param id="0" name="Gravity">-10</param>
                                                </action>
                                            </actions>
                                        </event-block>
                                    </sub-events>
                                </event-block>
                            </sub-events>
                        </event-block>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-block>
        <comment>Pfeil und Pin-Kugel</comment>
        <event-block>
            <conditions>
                <condition id="1" name="Is overlapping another object" type="pfeil">
                    <param id="0" name="Object">pflock</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Set value" type="System">
                    <param id="0" name="Variable">anim</param>
                    <param id="1" name="Value">0.5</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-1" name="Every tick" type="System" />
            </conditions>
            <actions>
                <action id="-18" name="Rotate clockwise" type="pflock">
                    <param id="0" name="Degrees">anim</param>
                </action>
            </actions>
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-13" name="Is between angles" type="pflock">
                            <param id="0" name="First angle">180</param>
                            <param id="1" name="Second angle">200</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action behavior="Pin" id="1" name="Unpin" type="Kugel" />
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">anim</param>
                            <param id="1" name="Value">0</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
        <comment>Wind</comment>
        <event-block>
            <conditions>
                <condition id="-13" name="Pick nth instance" type="System">
                    <param id="0" name="Object">ballon</param>
                    <param id="1" name="Instance">2</param>
                </condition>
            </conditions>
            <actions />
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="1" name="Is overlapping another object" type="ballon">
                            <param id="0" name="Object">hitTest</param>
                        </condition>
                        <condition id="-1" name="Compare X" type="ventilator">
                            <param id="0" name="Comparison">2</param>
                            <param id="1" name="X co-ordinate">ballon.X</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">wind</param>
                            <param id="1" name="Value">(500-(ballon.X-ventilator.X))/300</param>
                        </action>
                        <action id="-1" name="Set X" type="ballon">
                            <param id="0" name="X">ballon.X+(wind*wind)</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="1" name="Is overlapping another object" type="ballon">
                            <param id="0" name="Object">hitTest</param>
                        </condition>
                        <condition id="-1" name="Compare X" type="ventilator">
                            <param id="0" name="Comparison">4</param>
                            <param id="1" name="X co-ordinate">ballon.X</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">wind</param>
                            <param id="1" name="Value">(500-(ventilator.X-ballon.X))/300</param>
                        </action>
                        <action id="-1" name="Set X" type="ballon">
                            <param id="0" name="X">ballon.X-(wind*wind)</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
